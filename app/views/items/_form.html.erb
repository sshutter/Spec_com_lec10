<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <% if session[:here] != "edit" %>
      <%= form.label :user_id, style: "display: block", class:"form-label" %>
      <%= form.text_field :user_id, class:"form-control" %>
    <% else %>
      <%= form.hidden_field :user_id, value: session[:user_id]%>
    <% end %>
    
  </div>

  <div>
    <%= form.label :name, style: "display: block" , class:"form-label" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div>
    <%= form.label :price, style: "display: block", class:"form-label" %>
    <%= form.text_field :price, class:"form-control" %>
  </div>

  <div>
    <%= form.label :stock, style: "display: block", class: "form-label" %>
    <%= form.number_field :stock, class:"form-control" %>
  </div>
  <br>
  <div>
    <%= form.submit :Submit, class:"btn btn-dark" %>
  </div>
<% end %>
